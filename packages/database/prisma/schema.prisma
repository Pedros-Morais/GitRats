// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  githubId  String   @unique
  username  String   @unique
  name      String?
  avatar    String?
  bio       String?
  githubAccessToken String? // Stored for GraphQL API calls
  lastProcessedEventId String? // ID of the last processed GitHub event to prevent duplicates
  
  // Game Stats
  level     Int      @default(1)
  xp        Int      @default(0)
  streak    Int      @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  activities Activity[]
  squads     SquadMember[]
}

model Activity {
  id        String   @id @default(uuid())
  type      String   // PushEvent, PullRequestEvent, etc.
  repo      String
  count     Int      @default(1)
  xpEarned  Int      @default(0)
  
  createdAt DateTime @default(now())
  date      DateTime // normalized date for streaks
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Squad {
  id          String   @id @default(uuid())
  name        String
  description String?
  inviteCode  String   @unique @default(uuid()) // Simple invite mechanism
  isPrivate   Boolean  @default(false)
  avatar      String?  // Squad logo

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     SquadMember[]
}

model SquadMember {
  id        String   @id @default(uuid())
  role      String   @default("MEMBER") // ADMIN, MEMBER
  joinedAt  DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  squadId   String
  squad     Squad    @relation(fields: [squadId], references: [id])

  @@unique([userId, squadId]) // User can only join a squad once
}
